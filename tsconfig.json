{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "dom",
      "ES2020"
    ],
    "module": "CommonJS",
    "skipLibCheck": true,
    "outDir": "build",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2020",
    "paths": {}
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./test/**/*.ts",
    "./test/**/*.tsx",
  ],
  "exclude": [],
  "ts-node": {
    "files": true
  }
}